<project xmlns="http://maven.apache.org/POM/4.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>dev.orne</groupId>
    <artifactId>root-pom</artifactId>
    <version>${project.version}</version>
    <relativePath />
  </parent>

  <groupId>sample.group</groupId>
  <artifactId>simple-project</artifactId>
  <version>1.2.3</version>
  <packaging>pom</packaging>

  <name>simple-project</name>
  <description>simple-project</description>
  <inceptionYear>2021</inceptionYear>
  <url>https://orne-dev.github.io/simple-project/</url>

  <licenses>
    <license>
      <name>GNU Lesser General Public License (LGPL) version 3.0</name>
      <url>https://www.gnu.org/licenses/lgpl-3.0.txt</url>
      <distribution>repo</distribution>
    </license>
  </licenses>

  <developers>
  </developers>

  <scm>
    <url>https://github.com/orne-dev/simple-project/tree/master</url>
    <connection>scm:git:git://github.com/orne-dev/simple-project.git</connection>
    <developerConnection>scm:git:ssh://github.com:orne-dev/simple-project.git</developerConnection>
    <tag>HEAD</tag>
  </scm>

  <properties>
    <license.licenseName>lgpl_v3</license.licenseName>

    <sonar.projectKey>orne-dev_simple-project</sonar.projectKey>

    <install.skip>false</install.skip>
    <deploy.skip>false</deploy.skip>
  </properties>

  <build>
    <pluginManagement>
      <plugins>
        <plugin>
          <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-site-plugin</artifactId>
          <configuration>
            <topSiteURL>https://orne-dev.github.io/simple-project/</topSiteURL>
          </configuration>
        </plugin>
      </plugins>
    </pluginManagement>
  </build>

  <distributionManagement>
    <site>
      <id>github</id>
      <name>Github Project Pages</name>
      <url>${project.url}</url>
    </site>
  </distributionManagement>

</project>
